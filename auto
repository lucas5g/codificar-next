#bash
git add .
git commit -m "$1"
git push
ssh -t versionaplicativoderestaurante "\
    cd codificar/codificar-next/ \
    && git reset --hard \
    && git pull \
    && source ~/.nvm/nvm.sh \
    && nvm use 16 \
    && npm install \
    && npm run build  \
    && pm2 restart codificar-next --update-env  \
    && pm2 restart codificar-backend --update-env
"

echo "\n\nhttp://version.aplicativoderestaurante.com.br:3000\n\n"
